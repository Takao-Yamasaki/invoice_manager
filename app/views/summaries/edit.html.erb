<p>編集</p>
<%= form_with model:@summary, local: true do |f| %>
  <p>請求ID：<%= f.text_field :invoice_id %></p>
  <p>顧客名：<%= f.collection_select :client_id,Client.all,:id,:name,include_brank:"顧客名を選択してください"  %></p>
  <p>商品名：<%= f.collection_select :item_id,Item.all,:id,:name,include_brank: "商品名を選択してください" %></p>
  <p>数量：<%= f.text_field :amount %></p>
  <%= f.submit "登録" %>
<% end %>
<%= link_to "戻る",summaries_path %>